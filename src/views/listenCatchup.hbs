<section class="page">

  <p>Your catching up with {{user.user_name}}</p>

  <div class="user-card" id="card-{{track.id}}">
    <p class="user-card__text">{{track.title}}</p>
    <audio controls autoplay="autoplay" id="audio-{{track.content_id}}"
      ontimeupdate="this.currentTime >= {{track.target_time}} ? this.pause() : ''">
      <source src=" ../../assets/{{track.filename}}#t={{track.current_time_in_track}}" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
  </div>

  <br />

  <h3>Get Me Out of Here!</h3>

  <a href="/users">
    <button>Back to users</button>
  </a>

</section>